@model TP_NT.Models.Torneo

@{
    ViewData["Title"] = "Crear torneo";
}

<div class="container">
    <div class="row">
        <h1>Crear un torneo</h1>
    </div>
    <div class="row">
        <h3>Juga con tus conocidos y comprueben quien sabe mas de basket!</h3>
    </div>
    <div class="row">
        <form asp-action="CrearTorneo" method="POST">
            <div class="form-group">
                <label for="exampleInputPassword1">Nombre del torneo</label>
                <input type="text" class="form-text" id="nombreTorneo" placeholder="Escribi el nombre de tu torneo aca" asp-for="Nombre">
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
            <button type="button" class="btn btn-outline-primary">Volver</button>
        </form>
    </div>
</div>