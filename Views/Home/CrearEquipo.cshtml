@model TP_NT.Models.ViewModel.DatosFormEquipo

@{
    ViewData["Title"] = "Crear Equipo";
}
    <h1 id="plata" value="3000">3000</h1>
    <form asp-controller="Home" asp-action="CrearEquipo" method="POST">

        @foreach (var item in Model.Posicion)
        {
            <fieldset>  
                <legend>@item.ToString()</legend>
                @foreach (var it in Model.Jugadores) {
                    @if (it.Posicion.ToString().Equals(item.ToString()))
                    {
                        <input type="checkbox" id="pos" asp-for="@Model.jugsT[@it.IdJugador]" onchange="return ValidateJugSelection(this, @it.ValorContrato, @it.IdJugador);">
                        <label>@it.Nombre </label>  
                    }
                }
            </fieldset>
        }
        @foreach (var item in Model.Posicion)
        {
            <fieldset>  
                <legend>@item.ToString()</legend>
                @foreach (var it in Model.Jugadores) {
                    @if (it.Posicion.ToString().Equals(item.ToString()))
                    {
                        <input type="checkbox" id="pos" asp-for="@Model.jugsS[@it.IdJugador]" onchange="return ValidateJugSelectionSup(this, @it.ValorContrato, @it.IdJugador);">
                        <label>@it.Nombre</label>   
                    }
                }
            </fieldset>
        }
        <button type="submit">Crear </button>
    </form>  
