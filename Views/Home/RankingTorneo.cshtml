<div class="row">
  <div class="col-sm-12">
    <div class="card">
        <div class="card-header">
    <center>
    <span class="badge badge-success" style="font-size:18px;">RANKING EQUIPOS DE USUARIOS</span>
    </center>
  </div>
      <div class="card-body">
 
    <table class="table table-striped table-bordered table-condensed table-sm mt-3">
      <thead>
        <tr>
          <th scope="col">Puesto</th>
          <th scope="col">Equipo</th>
          <th scope="col">Puntaje</th>
        </tr>
      </thead>
      <tbody>
        @{int pos = 1;}
       
        @foreach (var item in Model)
        {
            <tr>
            <td><span class="badge badge-warning">@pos</span></td>
            <td><span class="badge badge-primary">@item.NombreUsuario</span></td>
            <td><span class="badge badge-danger">@item.Puntaje</span></td>
          </tr>
          {pos++;}
        }                  
      </tbody>
    </table>
